"from http://www.linuxjournal.com/article/3805
set incsearch
set ignorecase
set smartcase
set scrolloff=2
set wildmode=longest,list
"from http://vimdoc.sourceforge.net/htmldoc/usr_30.html
set softtabstop=3
filetype indent on
set cindent shiftwidth=3

"color scheme
colorscheme blackbeauty
hi String ctermfg=7  "dark white
hi PreProc ctermfg=5 cterm=bold  "cyan

